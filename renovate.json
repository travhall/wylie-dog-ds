{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":preserveSemverRanges"
  ],
  "labels": ["dependencies"],
  "assignees": [],
  "reviewers": [],
  "schedule": ["before 4am on monday"],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "description": "Group all non-major dependencies together",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    },
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Require approval for major updates",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["dependencies", "major-update"]
    },
    {
      "description": "Group React ecosystem updates",
      "matchPackagePatterns": ["^react", "^@types/react"],
      "groupName": "React ecosystem",
      "groupSlug": "react"
    },
    {
      "description": "Group Radix UI updates",
      "matchPackagePatterns": ["^@radix-ui"],
      "groupName": "Radix UI",
      "groupSlug": "radix-ui"
    },
    {
      "description": "Group testing libraries",
      "matchPackagePatterns": ["^@testing-library", "^vitest", "^@vitest"],
      "groupName": "Testing libraries",
      "groupSlug": "testing"
    },
    {
      "description": "Group ESLint and Prettier",
      "matchPackagePatterns": ["^eslint", "^prettier", "^@eslint"],
      "groupName": "Linting and formatting",
      "groupSlug": "linting"
    },
    {
      "description": "Group Storybook updates",
      "matchPackagePatterns": ["^@storybook", "^storybook"],
      "groupName": "Storybook",
      "groupSlug": "storybook"
    },
    {
      "description": "Group TypeScript updates",
      "matchPackagePatterns": ["^typescript", "^@typescript"],
      "groupName": "TypeScript",
      "groupSlug": "typescript"
    },
    {
      "description": "Separate lockfile maintenance",
      "matchUpdateTypes": ["lockFileMaintenance"],
      "enabled": true,
      "automerge": true,
      "schedule": ["before 4am on monday"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "automerge": true
  },
  "prConcurrentLimit": 3,
  "prCreation": "not-pending",
  "rebaseWhen": "behind-base-branch",
  "ignoreDeps": [],
  "postUpdateOptions": ["pnpmDedupe"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 4am on monday"]
  }
}
