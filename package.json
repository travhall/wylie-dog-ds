{
  "name": "design-system",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:component": "node scripts/generate-component.js",
    "lint": "turbo run lint",
    "lint:a11y": "turbo run lint:a11y",
    "perf": "./scripts/performance-check.sh",
    "prepare": "husky",
    "preview-storybook": "turbo run preview-storybook",
    "release": "turbo run build --filter=storybook^... && changeset publish --provenance",
    "size": "size-limit",
    "test": "turbo run test",
    "test:a11y": "turbo run test:a11y",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "version-packages": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "size-limit": "^12.0.0",
    "turbo": "^2.8.1",
    "typescript-eslint": "^8.54.0"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
