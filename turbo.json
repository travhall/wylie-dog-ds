{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "storybook-static/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "build:styles": {
      "inputs": ["src/**/*.css"],
      "outputs": ["dist/**/*.css"],
      "dependsOn": ["^build"],
      "cache": true
    },
    "build:components": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "outputs": ["dist/**/*.js", "dist/**/*.mjs"],
      "dependsOn": ["build:styles"],
      "cache": true
    },
    "build-tokens": {
      "inputs": ["../tokens/src/*.json", "style-dictionary.config.js"],
      "outputs": ["src/styles/tokens.css", "src/tokens/*.ts"],
      "cache": true
    },
    "test": {
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "vitest.config.ts",
        "src/test-setup.ts"
      ],
      "cache": true
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:a11y": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "vitest.config.ts"],
      "cache": true
    },
    "test:coverage": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "vitest.config.ts"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:a11y": {
      "inputs": ["src/**/*.tsx", ".eslintrc.a11y.js"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "preview-storybook": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "figma-plugin#build": {
      "inputs": ["src/**/*.{ts,tsx}", "manifest.json", "vite.config.ts"],
      "outputs": ["dist/**"],
      "dependsOn": ["@wyliedog/tokens#build"],
      "cache": true
    },
    "figma-plugin#dev": {
      "cache": false,
      "persistent": true
    },
    "@wyliedog/tokens#build": {
      "inputs": [
        "io/sync/**/*.json",
        "io/processed/**/*.json",
        "scripts/**/*.js",
        "style-dictionary.config.js"
      ],
      "outputs": ["dist/**"],
      "cache": true
    },
    "storybook#build": {
      "dependsOn": ["@wyliedog/tokens#build", "@wyliedog/ui#build"],
      "inputs": ["src/**", "stories/**", ".storybook/**"],
      "outputs": ["dist/**", "storybook-static/**"],
      "cache": true
    },
    "storybook#build:css": {
      "dependsOn": ["@wyliedog/tokens#build"],
      "inputs": ["src/styles/**/*.css"],
      "outputs": ["dist/**/*.css"],
      "cache": true
    },
    "storybook#dev": {
      "dependsOn": ["@wyliedog/tokens#build", "@wyliedog/ui#build:styles"],
      "cache": false,
      "persistent": true
    }
  }
}
