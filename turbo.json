{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "storybook-static/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "build:styles": {
      "inputs": ["src/**/*.css"],
      "outputs": ["dist/**/*.css"],
      "cache": true
    },
    "build:components": {
      "inputs": ["src/**/*.tsx", "src/**/*.ts"],
      "outputs": ["dist/**/*.js", "dist/**/*.mjs"],
      "dependsOn": ["build:styles"],
      "cache": true
    },
    "build-tokens": {
      "inputs": ["../tokens/src/*.json", "style-dictionary.config.js"],
      "outputs": ["src/styles/tokens.css", "src/tokens/*.ts"],
      "cache": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "preview-storybook": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    }
  }
}
