{
  "name": "@wyliedog/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./button": {
      "types": "./src/button.tsx",
      "import": "./dist/button.mjs",
      "require": "./dist/button.js"
    },
    "./badge": {
      "types": "./src/badge.tsx", 
      "import": "./dist/badge.mjs",
      "require": "./dist/badge.js"
    },
    "./card": {
      "types": "./src/card.tsx",
      "import": "./dist/card.mjs", 
      "require": "./dist/card.js"
    },
    "./input": {
      "types": "./src/input.tsx",
      "import": "./dist/input.mjs",
      "require": "./dist/input.js"
    }
  },
  "scripts": {
    "build": "pnpm run build:styles && pnpm run build:components",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsup",
    "dev": "pnpm run dev:styles & pnpm run dev:components",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "dependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.11",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.0.2",
    "typescript": "5.5.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
