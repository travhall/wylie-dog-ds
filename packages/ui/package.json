{
  "name": "@wyliedog/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    "./styles": "./dist/index.css",
    "./tokens": {
      "types": "./src/tokens/index.ts",
      "import": "./src/tokens/index.ts",
      "require": "./src/tokens/index.ts"
    },
    "./tokens/hierarchical": {
      "types": "./src/tokens/hierarchical.ts", 
      "import": "./src/tokens/hierarchical.ts",
      "require": "./src/tokens/hierarchical.ts"
    },
    "./button": {
      "types": "./src/button.tsx",
      "import": "./dist/button.mjs",
      "require": "./dist/button.js"
    },
    "./badge": {
      "types": "./src/badge.tsx",
      "import": "./dist/badge.mjs",
      "require": "./dist/badge.js"
    },
    "./card": {
      "types": "./src/card.tsx",
      "import": "./dist/card.mjs",
      "require": "./dist/card.js"
    },
    "./input": {
      "types": "./src/input.tsx",
      "import": "./dist/input.mjs",
      "require": "./dist/input.js"
    }
  },
  "scripts": {
    "build-tokens": "node style-dictionary.config.js",
    "build": "pnpm build-tokens && pnpm build:styles && pnpm build:components",
    "build:styles": "tailwindcss -i ./src/styles/index.css -o ./dist/index.css",
    "build:components": "tsup",
    "dev": "pnpm build-tokens && pnpm dev:styles & pnpm dev:components",
    "dev:styles": "tailwindcss -i ./src/styles/index.css -o ./dist/index.css --watch",
    "dev:components": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "dependencies": {
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.11",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "culori": "^4.0.2",
    "eslint": "^9.31.0",
    "style-dictionary": "^5.0.1",
    "tailwindcss": "^4.1.11",
    "tsup": "^8.5.0",
    "typescript": "5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
