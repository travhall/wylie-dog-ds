{
  "shadow": {
    "elevation": {
      "sm": {
        "$value": {
          "color": "#00000010",
          "offsetX": "0px",
          "offsetY": "1px",
          "blur": "3px",
          "spread": "0px"
        },
        "$type": "shadow",
        "$description": "Small elevation shadow"
      },
      "md": {
        "$value": [
          {
            "color": "#00000010",
            "offsetX": "0px",
            "offsetY": "4px",
            "blur": "6px",
            "spread": "-1px"
          },
          {
            "color": "#00000006",
            "offsetX": "0px",
            "offsetY": "2px",
            "blur": "4px",
            "spread": "-1px"
          }
        ],
        "$type": "shadow",
        "$description": "Medium elevation with layered shadows"
      },
      "lg": {
        "$value": [
          {
            "color": "#00000015",
            "offsetX": "0px",
            "offsetY": "10px",
            "blur": "15px",
            "spread": "-3px"
          },
          {
            "color": "#00000010",
            "offsetX": "0px",
            "offsetY": "4px",
            "blur": "6px",
            "spread": "-2px"
          }
        ],
        "$type": "shadow"
      }
    },
    "colored": {
      "primary": {
        "$value": {
          "color": "{color.primary.500}25",
          "offsetX": "0px",
          "offsetY": "4px",
          "blur": "12px",
          "spread": "0px"
        },
        "$type": "shadow"
      }
    }
  },
  "border": {
    "width": {
      "thin": {
        "$value": "1px",
        "$type": "borderWidth"
      },
      "thick": {
        "$value": "2px",
        "$type": "borderWidth"
      }
    },
    "style": {
      "solid": {
        "$value": "solid",
        "$type": "borderStyle"
      },
      "dashed": {
        "$value": "dashed",
        "$type": "borderStyle"
      }
    },
    "composite": {
      "default": {
        "$value": {
          "color": "{color.border.default}",
          "width": "{border.width.thin}",
          "style": "{border.style.solid}"
        },
        "$type": "border"
      },
      "focus": {
        "$value": {
          "color": "{color.primary.500}",
          "width": "{border.width.thick}",
          "style": "{border.style.solid}"
        },
        "$type": "border"
      }
    }
  },
  "color": {
    "primary": {
      "500": {
        "$value": "#3b82f6",
        "$type": "color"
      }
    },
    "border": {
      "default": {
        "$value": "#d1d5db",
        "$type": "color"
      }
    }
  }
}