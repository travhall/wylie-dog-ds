{
  "name": "figma-plugin",
  "version": "0.1.0",
  "description": "Design token synchronization between Figma and code repositories",
  "type": "module",
  "private": true,
  "main": "dist/plugin.js",
  "scripts": {
    "dev": "npm run build && vite build --watch --mode development",
    "build": "npm run build:plugin && npm run build:ui",
    "build:plugin": "vite build",
    "build:ui": "vite build --mode ui",
    "clean": "rm -rf dist node_modules .turbo",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@wyliedog/tokens": "workspace:*",
    "culori": "^4.0.2",
    "preact": "^10.27.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.116.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.1.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "terser": "^5.43.1",
    "typescript": "5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-singlefile": "^0.13.5"
  }
}